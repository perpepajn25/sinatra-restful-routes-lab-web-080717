<h1> Edit Your Recipe </h1>

<form method="Post" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p> Name: <input type="text" id="name" name="name" value=<%=@recipe.name%>> </p>
  <p> Ingredients: <input type="text" id="ingredients" name="ingredients" value=<%=@recipe.ingredients%>> </p>
  <p> Cook Time: <input type="text" id="cook_time" name="cook_time" value=<%=@recipe.cook_time%>> </p>
  <input type="submit" value="submit">
</form>
